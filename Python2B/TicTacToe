## CONSTANTS
symbols = ['---', ' X ', ' O ']

board = [
  [0,0,0],
  [0,0,0],
  [0,0,0]
]


## FUNCTIONS
from random import randint

def display_cell(r, c):
  index = board[r][c]
  print(symbols[index], end='')
  
def display_board():
  for row in range(3):
    for col in range(3):
      display_cell(row, col)
    print('\n')

def player_moves():
  valid = False
  while not valid:
    row = int(input("What row? "))
    col = int(input("What column? "))
    valid = board[row][col] == 0

    if not valid:
      print("That move is not available")
    else:
      board[row][col] = 1

def computer_moves():
  valid = False
  while not valid:
    row = randint(0, 2)
    col = randint(0, 2)
    valid = board[row][col] == 0

    if valid:
      board[row][col] = 2

def tic_tac_toe():
  win = False
  tie = False
  while not win and not tie:
    display_board()

    # player moves
    player_moves()

    # computer moves
    computer_moves()

    # test for win

    # test for tie

## MAIN
tic_tac_toe()
